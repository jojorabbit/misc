<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dog_title"
        android:id="@+id/checkBoxDog"
        android:layout_marginTop="58dp"
        android:checked="false"
        android:layout_below="@+id/titleTextView"
        android:layout_alignLeft="@+id/checkBoxDragon"
        android:layout_alignStart="@+id/checkBoxDragon" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cat_title"
        android:id="@+id/checkBoxCat"
        android:layout_below="@+id/checkBoxDog"
        android:checked="false"
        android:layout_alignRight="@+id/titleTextView"
        android:layout_alignEnd="@+id/titleTextView"
        android:layout_alignLeft="@+id/checkBoxDog"
        android:layout_alignStart="@+id/checkBoxDog" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dragon_title"
        android:id="@+id/checkBoxDragon"
        android:layout_below="@+id/checkBoxCat"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_button"
        android:id="@+id/showButtonId"
        android:layout_below="@+id/checkBoxDragon"
        android:layout_alignLeft="@+id/checkBoxDragon"
        android:layout_alignStart="@+id/checkBoxDragon"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_show"
        android:id="@+id/showTextViewId"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/showButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_toLeftOf="@+id/showButtonId"
        android:layout_toStartOf="@+id/showButtonId" />
</RelativeLayout>
